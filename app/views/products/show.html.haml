.container
  = render "layouts/header"
  %section.item-box-container
    %h1.item-name  
    = @product.name
    .item-main-content
      .item-photo
        = image_tag "https://static.mercdn.net/item/detail/orig/photos/m41654516108_1.jpg?1548939196", class: "photo-details"
      %table.item-detail-table
        %tbody
          %tr
            %th 出品者
            %td
              = link_to @product.users.nickname
              %div
              .item-user-ratings
                %i.icon-good
                %span 42
              .item-user-ratings
                %i.icon-normal
                %span 0
              .item-user-ratings
                %i.icon-bad
                %span 0
          %tr
            %th カテゴリー
            %td
              = link_to "siedlung"
              %div メンズ
              = link_to "#"
              .item-detail-table-sub-category
                %i.icon-arrow-right
                小物
              = link_to "#"
              .item-detail-table-sub-sub-category
                %i.icon-arrow-right
                ネクタイピン
          %tr
            %th ブランド
            %td
              = link_to @product.brand
          %tr
            %th 商品の状態
            %td 新品、未使用
          %tr
            %th 配送料の負担
            %td 
              = link_to @product.delivery.cost
          %tr
            %th 配送の方法
              = link_to @product.delivery.method
          %tr
            %th 配送元地域
            %td
          %tr
            %th 発送日の目安
            %td 
              = link_to @product.delivery.date
      .item-price-box
        %span.item-price  
          = @product.price
        %span.item-tax (税込)
        %span.item-shipping-fee 送料込み  

      .item-description
        %p.item-description-inner
          = @product.introduction
      
      .item-button-container.clearfix
        .item-button-left
          %button.item-button.item-button-like{%data-ga:element,data-ga-category: LIKE,data-ga-label: like!,data-id: m41654516108,data-toggle: like, name: like!,%type: "button"}
            %i.icon-like-border
            %span いいね!
            %span.fade-in-down{data-num: like} 11
          %a.item-button.item-button-report.clearfix{data-modal: report-item, data-open:modal, href: "#"}
            %i.icon-flag
            %span 不適切な商品の報告
        .item-button-right
          = link_to "#"
          %i.icon-lock
          %span あんしん・あんぜんへの取り組み

  .item-detail-message
    .message-container
      .message-content
        .message-form{action: "#", method: "POST"}
          %input{name: __csrf_value,type: hidden}/
          %p 相手のことを考え丁寧なコメントを心がけましょう。不快な言葉遣いなどは利用制限や退会処分となることがあります。
          %input{name: item_id,type: hidden,value: m41654516108}/
          %input{name: redirect_url_key,type: hidden,value: item_detail}/
          %textarea.textarea-default{name: body,type: text,value: ""}
          %button.message-submit.btn-default.btn-gray{type:submit}
            %span コメントする

  = render "layouts/footer"